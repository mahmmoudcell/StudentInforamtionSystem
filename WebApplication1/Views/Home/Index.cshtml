@{
    ViewData["Title"] = "Home Page";
}

<form asp-area="Identity" asp-page="/Account/Logout" method="post" class="text-end">
    <button type="submit" class="btn btn-danger">Logout</button>
</form>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-4">Welcome to Ain Shams University</h1>
            @if (User.Identity.IsAuthenticated)
            {
                <p class="lead">
                <p>Hello, @(User.Identity.Name.Split('@')[0])!</p>
                <a class="btn btn-primary" asp-controller="Admin" asp-action="Dashboard" role="button">Admin Dashboard</a>
                <a class="btn btn-success" asp-controller="Student" asp-action="Dashboard" role="button">Student Dashboard</a>

                </p>
            }
            else
            {
                <p class="lead">Please log in to explore our programs.</p>
            }
            <p class="lead">Explore our programs and find the right course for you.</p>
        </div>
    </div>


   
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-body text-center">
                        <h2 class="card-title mb-4">Login as Admin or User</h2>
                        <div class="row">
                            <div class="col-md-6">
                                <a asp-area="Identity" asp-page="/Account/Login" asp-route-role="Admin" class="btn btn-primary btn-lg btn-block">Login as Admin</a>
                            </div>
                            <div class="col-md-6">
                                <a asp-area="Identity" asp-page="/Account/Login" asp-route-role="User" class="btn btn-outline-primary btn-lg btn-block">Login as User</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
