@model IEnumerable<WebApplication1.Models.crsResult>

@{
    ViewData["Title"] = "Index";
}

<!-- Dropdown Menu -->
<div class="container mt-4">
    <div class="dropdown">
        <button class="btn btn-primary btn-lg dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Menu
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="@Url.Action("Index", "Home")">Home</a>
            <a class="dropdown-item" href="@Url.Action("Index", "Courses")">Courses</a>
            <a class="dropdown-item" href="@Url.Action("Index", "Departments")">Departments</a>
            <a class="dropdown-item" href="@Url.Action("Index", "Instructors")">Instructors</a>
            <a class="dropdown-item" href="@Url.Action("Index", "Trainees")">Trainees</a>
            <a class="dropdown-item" href="@Url.Action("Index", "crsResults")">Course Result</a>
        </div>
    </div>
</div>

<h1 class="text-center my-4">Course Results</h1>

<div class="container mb-3">
    @if (!User.IsInRole("Student"))
    {
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    }
</div>

<div class="card border-primary">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Course Results List</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Trainee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Degree)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Course)
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Trainee.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Degree)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Name)
                        </td>
                        <td class="text-center">
                            @if (User.IsInRole("Student"))
                            {
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" role="button" aria-label="View Details">Details</a>
                            }
                            else
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" role="button" aria-label="Edit Course Result">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" role="button" aria-label="View Details">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" role="button" aria-label="Delete Course Result">Delete</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
