@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1 class="text-center text-danger my-4">Delete Course</h1>

<h3 class="text-center">Are you sure you want to delete this course?</h3>

<div class="card shadow-sm p-4 mt-4">
    <h4 class="mb-3">Course Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.degree)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.degree)
        </dd>

        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.Mindegree)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Mindegree)
        </dd>

        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
    </dl>
</div>

<div class="text-center mt-4">
    <form asp-action="Delete" class="d-inline">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
</div>
