@model WebApplication1.Models.Instructor

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">@Model.Name's Details</h1>

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <!-- Display the image -->
            <img src="~/@Model.Image" class="img-fluid rounded-start" alt="Instructor Image" style="max-width: 100%; height: auto;" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Salary)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Salary) EGP</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Address)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Course)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Course.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Department)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Department.Name)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
