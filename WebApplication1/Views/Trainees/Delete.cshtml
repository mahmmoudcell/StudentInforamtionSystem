@model WebApplication1.Models.Trainee

@{
    ViewData["Title"] = "Delete Trainee";
}

<h1 class="text-center my-4 text-danger">Delete Trainee</h1>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Are you sure you want to delete this trainee?</h4>
    </div>
    <div class="card-body">
        <h4>@Model.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Image:</dt>
            <dd class="col-sm-9">
                <img src="@Html.DisplayFor(model => model.Image)" alt="@Model.Name" class="img-thumbnail" style="max-width: 150px;" />
            </dd>

            <dt class="col-sm-3">Address:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

            <dt class="col-sm-3">Grade:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Grade)</dd>

            <dt class="col-sm-3">Department:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Department.Id)</dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </div>
</div>
