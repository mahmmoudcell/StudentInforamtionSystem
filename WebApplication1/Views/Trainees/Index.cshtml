@model IEnumerable<WebApplication1.Models.Trainee>

@{
    ViewData["Title"] = "Trainee List";
}

<!-- Dropdown Menu -->
<div class="container mt-4">
    <div class="dropdown">
        <button class="btn btn-primary btn-lg dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Menu
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="@Url.Action("Index", "Home")">Home</a>
            <a class="dropdown-item" href="@Url.Action("Index", "Courses")">Courses</a>
            <a class="dropdown-item" href="@Url.Action("Index", "Departments")">Departments</a>
            <a class="dropdown-item" href="@Url.Action("Index", "Instructors")">Instructors</a>
            <a class="dropdown-item" href="@Url.Action("Index", "Trainees")">Trainees</a>
            <a class="dropdown-item" href="@Url.Action("Index", "crsResults")">Course Results</a>
        </div>
    </div>
</div>

<h1 class="text-center my-4">Trainee List</h1>

<div class="mb-3 text-right">
    <a asp-action="Create" class="btn btn-primary">Create New Trainee</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Image)</th>
                <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                <th>@Html.DisplayNameFor(model => model.First().Grade)</th>
                <th>@Html.DisplayNameFor(model => model.First().Department.Name)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                // Determine the CSS class based on the grade value
                var colorClass = item.Grade > 60 ? "text-success" : "text-danger";

                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="~/@item.Image" alt="Trainee Image" class="img-thumbnail" style="max-width: 100px; height: auto;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td class="@colorClass">@Html.DisplayFor(modelItem => item.Grade)</td>
                    <td>@Html.DisplayFor(modelItem => item.Department.Name)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Bootstrap JavaScript -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
